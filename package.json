{
    "name": "ionx",
    "version": "1.0.0",
    "description": "Components and extensions for Ionic",
    "sourceDependencyDir": "src/components",
    "files": [
        "src/"
    ],
    "scripts": {
        "build": "node-utils-file-system-glob-delete dist/**/* && npx ts-node build.ts",
        "build:module": "npx ts-node build.ts",
        "start": "stencil build --dev --watch --serve",
        "serve": "stencil serve --root www",
        "test": "stencil test --spec --e2e",
        "test.watch": "stencil test --spec --e2e --watchAll",
        "intl:DateTime": "js-intl-google-sheet-importer --output-path src/components/DateTime/intl --output-type json --document 1lTpcwU0ubFX7bJFCt8zeHYrwbDaoxNcjzpjUVdmiY_w --worksheet 1 --filterTags ionic-extensions-datetime",
        "intl:LinkEditor": "js-intl-google-sheet-importer --output-path src/components/LinkEditor/intl --output-type json --document 1lTpcwU0ubFX7bJFCt8zeHYrwbDaoxNcjzpjUVdmiY_w --worksheet 1 --filterTags ionx/LinkEditor",
        "intl:forms": "js-intl-google-sheet-importer --output-path src/components/forms/intl --output-type json --document 1lTpcwU0ubFX7bJFCt8zeHYrwbDaoxNcjzpjUVdmiY_w --worksheet 1 --filterTags ionx/forms",
        "generate": "stencil generate"
    },
    "dependencies": {
        "@capacitor/core": "^2.4.1",
        "@co.mmons/js-utils": "github:co-mmons/js-utils",
        "@co.mmons/rxjs-utils": "github:co-mmons/rxjs-utils",
        "@ionic/core": "^5.3.1",
        "@stencil/core": "github:CODE-AND-MORE/stencil-core-build",
        "@stencil/sass": "^1.4.1",
        "@types/dragula": "^3.7.0",
        "bignumber.js": "^9.0.0",
        "dragula": "^3.7.3",
        "fast-equals": "^2.0.0",
        "imask": "^6.0.5",
        "rxjs": "^6.6.2",
        "scroll-into-view": "^1.15.0",
        "tippy.js": "^6.2.6",
        "ts-error": "^1.0.6",
        "typescript": "^4.1.3"
    },
    "intlBundleItems": [
        {
            "type": "message",
            "path": "./src/components/forms/intl/{{LOCALE}}.json",
            "module": "ionx/forms"
        },
        {
            "type": "message",
            "path": "./src/components/DateTime/intl/{{LOCALE}}.json",
            "module": "ionx/DateTime"
        },
        {
            "type": "message",
            "path": "./src/components/LinkEditor/intl/{{LOCALE}}.json",
            "module": "ionx/LinkEditor"
        }
    ],
    "devDependencies": {
        "@co.mmons/js-intl": "github:co-mmons/js-intl"
    }
}
