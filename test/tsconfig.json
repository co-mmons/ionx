{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "lib": [
            "dom",
            "es2017",
            "es2018",
            "es2019",
            "es2020"
        ],
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2017",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment"
    },
    "include": ["src"],
    "baseUrl": "./",
    "paths": {
        "ionx/*": ["../dist/*"]
    }
}
